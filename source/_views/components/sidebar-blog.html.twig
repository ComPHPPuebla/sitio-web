{% if page.author is defined %}
    <div class="panel panel-default">
        <div class="panel-heading"><h3 class="panel-title">Autor</h3></div>
        <div class="panel-body">
            {% include 'team/' ~ page.author ~ '.html.twig' %}
        </div>
    </div>
{% endif %}

{% if data.posts_categories|length > 0 %}
    <div class="panel panel-default">
        <div class="panel-heading"><h3 class="panel-title">Categor√≠as</h3></div>
        <div class="list-group">
            {% for category,posts in data.posts_categories %}
                <a href="/blog/categorias/{{ category|url_encode(true) }}/" class="list-group-item">
                    {{ category }}
                </a>
            {% endfor %}
        </div>
    </div>
{% endif %}

{% if data.posts_tags|length > 0 %}
    <div class="panel panel-default">
        <div class="panel-heading"><h3 class="panel-title">Etiquetas</h3></div>
        <div class="list-group">
            {% for tag,posts in data.posts_tags %}
                <a href="/blog/etiquetas/{{ tag|url_encode(true) }}/" class="list-group-item">
                    {{ tag }}
                </a>
            {% endfor %}
        </div>
    </div>
{% endif %}
